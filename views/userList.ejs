<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User List</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 20px;
      }

      h1 {
        color: #333;
        text-align: center;
      }

      ul {
        list-style-type: none;
        padding: 0;
      }

      li {
        background: white;
        margin: 10px 0;
        padding: 15px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }

      p {
        margin: 5px 0;
      }

      a.button-link {
        display: block;
        background-color: #5cb85c;
        color: white;
        padding: 10px 15px;
        text-align: center;
        border-radius: 4px;
        text-decoration: none;
        margin: 10px 0;
      }

      a.button-link:hover {
        background-color: #4cae4c;
      }

      .create-button {
        display: block;
        margin: auto;
        background-color: rgb(53, 163, 236);
        padding: 10px;
        border: 1px solid transparent;
        border-radius: 10px;
        font-size: max(20px, 2vmin);
        cursor: pointer;
      }

      .delete-button {
        background-color: #d9534f;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
      }

      .delete-button:hover {
        background-color: #c9302c;
      }

      .user-data {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 20px;
      }

      .user-info {
        flex: 0 1 200px;
        min-width: 200px;
      }

      .bio-age {
        flex: 1 1 200px;
        min-width: 200px;
        word-wrap: break-word;
      }

      .delete-form {
        margin: 0;
        align-self: center;
      }

      .data-edit-del {
        display: flex;
        gap: 1vmax;
      }

      .search {
        margin-top: 10px;
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 2vmax;
      }

      .search input,
      .search button {
        padding: 10px;
        border: 1px solid white;
        border-radius: 10px;
        outline: #fff;
        padding: 10px;
      }

      .search input {
        min-width: 250px;
      }

      .search button {
        /* width: 150px; */
        min-width: 150px;
      }
    </style>
  </head>
  <body>
    <h1>User List</h1>
    <ul>
      <div>
        <form method="get" action="/create">
          <button class="create-button" type="submit">Create User</button>
        </form>
        <form class="search" method="get" action="/search">
          <input name="q" type="text" value="" />
          <button>Search</button>
        </form>
      </div>

      <% users.forEach(user => { %>
      <li class="user-data">
        <div class="user-info">
          <p><strong>ID:</strong> <%= user.id %></p>
          <p><strong>Username:</strong> <%= user.username %></p>
          <p><strong>Email:</strong> <%= user.email %></p>
          <div class="data-edit-del">
            <a class="button-link" href="/<%= user.id %>/update">Update</a>
            <form
              class="delete-form"
              action="<%= user.id %>/delete"
              method="post"
            >
              <button class="delete-button" type="submit">Delete</button>
            </form>
          </div>
        </div>
        <div class="bio-age">
          <% if (user.age) { %>
          <p><strong>Age:</strong> <%= user.age %></p>
          <% } %> <% if (user.bio) { %>
          <p><strong>Bio:</strong> <%= user.bio %></p>
          <% } %>
        </div>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
